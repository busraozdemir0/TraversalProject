@model MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Mail Gönderme Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Alıcı Mail Adresi")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Konu Başlığı")
        <input type="text" asp-for="Subject" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Mesaj İçeriği")
        <textarea cols="30" rows="5" class="form-control" asp-for="Body"></textarea>
    </div>
    <br />
    <button id="btnGonder" class="btn btn-outline-primary">Mail Gönder</button>
</form>

<script>
    const btn=document.getElementById("btnGonder");
    const inputs=document.querySelector("input")
    btn.addEventListener("click",function(){
        swal("Harika!", "Mailiniz başarıyla gönderildi.", "success");
        inputs.value="";
    });
</script>


