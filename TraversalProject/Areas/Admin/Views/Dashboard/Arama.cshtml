@model AramaModel
@{
    ViewData["Title"] = "Arama";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="container" style="background-color:#fff; margin-bottom:50px">
        <hr class="m-0" style="margin-top:0px;">
        <div class="container col-md-8 py-5 mt-3" style="margin-left: 30px; margin-top:2px;">
            <div class="row">
                <div class="col-md-8">
                    <h2 class="font-weight-normal text-6 mb-0">Arama sonuçları listeleniyor...</h2>
                </div>
            </div>
            <hr class="my-4" style="margin-left:-15px">
            <div class="row">
                <div class="col-md-12 " style="margin-bottom:80px" ">
                    @foreach (var item in Model.Abouts)
                    {
                    <ul class="simple-post-list m-0">
                        <li>
                            <div class="post-info">
                                <a href="/admin/about/index ">@Html.Raw(@item.Title)</a>
                                <div class="post-meta">
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="col pt-2 mt-1">
                        <hr class="my-4" style="margin-left:-15px">
                    </div>
                    }

                    @foreach (var item in Model.AppUsers)
                    {
                    <ul class="simple-post-list m-0">
                        <li>
                            <div class="post-info">
                                <a href="/admin/user/index ">@Html.Raw(@item.Name) kullanıcısı</a>
                                <div class="post-meta">
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="col pt-2 mt-1">
                        <hr class="my-4" style="margin-left:-15px">
                    </div>
                    }

                    @foreach (var item in Model.Comments)
                    {
                    <ul class="simple-post-list m-0">
                        <li>
                            <div class="post-info">
                                <a href="/admin/comment/index ">@Html.Raw(@item.CommentUser) yorumu</a>
                                <div class="post-meta">
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="col pt-2 mt-1">
                        <hr class="my-4" style="margin-left:-15px">
                    </div>
                    }

                    @foreach (var item in Model.Destinations)
                    {
                    <ul class="simple-post-list m-0">
                        <li>
                            <div class="post-info">
                                <a href="/admin/destination/index">@Html.Raw(@item.City) rotası</a>
                                <div class="post-meta">
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="col pt-2 mt-1">
                        <hr class="my-4" style="margin-left:-15px">
                    </div>
                    }

                    @foreach (var item in Model.ContactUses)
                    {
                    <ul class="simple-post-list m-0">
                        <li>
                            <div class="post-info">
                                <a href="/admin/contactus/index ">@Html.Raw(@item.Subject) konulu mesaj</a>
                                <div class="post-meta">
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="col pt-2 mt-1">
                        <hr class="my-4" style="margin-left:-15px">
                    </div>
                    }

                    @if(!(ViewBag.Reservations is null))  @*ViewBag ile taşınan rezervasyon bilgisi boş değilse arama sonucunu göstersin*@
                    {
                    <ul class="simple-post-list m-0">
                        <li>
                            <div class="post-info">
                                <a href="/admin/reservation/index ">@ViewBag.Reservations</a>
                                <div class="post-meta">
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="col pt-2 mt-1">
                        <hr class="my-4" style="margin-left:-15px">
                    </div>
                    }

                    @if(!(ViewBag.Guides is null))
                    {
                    <ul class="simple-post-list m-0">
                        <li>
                            <div class="post-info">
                                <a href="/admin/guide/index ">@ViewBag.Guides</a>
                                <div class="post-meta">
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="col pt-2 mt-1">
                        <hr class="my-4" style="margin-left:-15px">
                    </div>
                    }

                    @if(!(ViewBag.Announcements is null))
                    {
                    <ul class="simple-post-list m-0">
                        <li>
                            <div class="post-info">
                                <a href="/admin/announcement/index ">Duyuru Listesi</a>
                                <div class="post-meta">
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="col pt-2 mt-1">
                        <hr class="my-4" style="margin-left:-15px">
                    </div>
                    }

                    @if(!(ViewBag.Newsletters is null))
                    {
                    <ul class="simple-post-list m-0">
                        <li>
                            <div class="post-info">
                                <a href="/admin/newsletter/index ">Abone Olanlar Listesi</a>
                                <div class="post-meta">
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="col pt-2 mt-1">
                        <hr class="my-4" style="margin-left:-15px">
                    </div>
                    }

                    @if(!(ViewBag.AppRoles is null))
                    {
                    <ul class="simple-post-list m-0">
                        <li>
                            <div class="post-info">
                                <a href="/admin/role/index ">Rol Listesi</a>
                                <div class="post-meta">
                                </div>
                            </div>
                        </li>
                    </ul>
                    <div class="col pt-2 mt-1">
                        <hr class="my-4" style="margin-left:-15px">
                    </div>
                    }



                </div>
            </div>
        </div>
    </div>
</div>

