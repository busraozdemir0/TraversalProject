@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>

<table class="table table-hover">
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Rol Ata</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/admin/role/assignrole/@item.Id" class="btn btn-warning">Rol Ata</a></td>
        </tr>
    }
</table>
<a href="/admin/role/index/" class="btn btn-secondary">Rol Listesi</a>
