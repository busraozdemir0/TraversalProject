@model List<Destination>

<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6">
                <div class="maghny-grid">
                    <figure class="effect-lily border-radius  m-0">
                        <img class="img-fluid" src="@ViewBag.image" style="height:621px; width:560px;" alt="" />
                        <figcaption>
                            <div>
                                <h4>@ViewBag.daynight - @ViewBag.city</h4>
                                <p>@ViewBag.price ₺'den başlayan fiyatlar</p>
                            </div>

                        </figcaption>
                    </figure>
                </div>
            </div>
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @foreach(var item in Model)
                    {
                        <div class="maghny-gd-1 col-6 mb-4">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius">
                                    <img class="img-fluid" src="@item.CoverImage" style="height:298px; width:265px;" alt="" />
                                    <figcaption>
                                        <div>
                                            <h4>@item.DayNight - @item.City </h4>
                                            <p>@item.Price ₺'den başlayan fiyatlar</p>
                                        </div>

                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>